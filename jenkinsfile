stage('Run Tests - Chrome') {
    steps {
        sh '''
        /opt/venv/bin/robot \
          -d results/chrome \
          --variable REMOTE_URL:http://selenium_chrome:4444/wd/hub \
          --variable BROWSER:chrome \
          tests/
        '''
    }
}

stage('Run Tests - Firefox') {
    steps {
        sh '''
        /opt/venv/bin/robot \
          -d results/firefox \
          --variable REMOTE_URL:http://selenium_firefox:4444/wd/hub \
          --variable BROWSER:firefox \
          tests/
        '''
    }
}
